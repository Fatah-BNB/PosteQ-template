<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the solid fill color -->
<!--    <solid android:color="#FF5722" />-->

    <!-- Add corner radius for rounded corners (optional) -->
    <corners android:radius="16dp" />

    <!-- Set the stroke width and color (optional) -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Set padding inside the shape (optional) -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <!-- Set the size of the shape (optional) -->
    <size
        android:width="200dp"
        android:height="100dp" />
</shape>
